.bottom-margin-1
  = "#{Ecm::Blog::Post.human_attribute_name(:creator)}: #{form.object.creator.send(Ecm::Blog::Configuration.creator_label_method_name) }"

= form.input :title
= form.input :body
= form.input :published, as: :boolean

- if form.object.assets.empty?
  = form.input :assets, as: :file, input_html: { multiple: true }
- else
  .row.mb-4
    .col-md-6
      .bg-success.p-4
        = form.input :append_assets, as: :file, input_html: { multiple: true }
    .col-md-6
      .bg-danger.p-4
        = form.input :overwrite_assets, as: :file, input_html: { multiple: true }

- if Ecm::Blog.features?(:ecm_tags)
  = form.input :tag_list
