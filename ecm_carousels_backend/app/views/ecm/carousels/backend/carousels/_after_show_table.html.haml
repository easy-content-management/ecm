.row
  .col-lg-12
    %h2= Ecm::Carousels::ItemDetail.model_name.human(count: :other)

.row
  .col-lg-12
    = collection_table(collection: resource.item_details, resource_class: Ecm::Carousels::ItemDetail) do |table|
      = table.acts_as_list_actions scope: :carousel_id
      = table.column :image do |resource|
        - image_tag(main_app.url_for(resource.asset.variant(Ecm::Core::Backend::Configuration.image_variant_options_for(:table))))
      = table.timestamps
      = table.acts_as_published_actions
      = render partial: 'administrador/resources_controller/base/index_table_actions', locals: { table: table }