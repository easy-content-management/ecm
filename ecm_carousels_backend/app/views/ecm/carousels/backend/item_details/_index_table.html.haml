= table.acts_as_list_actions scope: :carousel_id
= table.association :carousel, label_method: :human, link_to: ->(resource) { url_for([resource.carousel]) }, sort: { column_name: :'ecm_carousels_carousels.name' }
= table.column :asset do |resource|
  - image_tag(main_app.url_for(resource.asset.variant(Ecm::Core::Backend::Configuration.image_variant_options_for(:table))))
= table.timestamps sort: true
